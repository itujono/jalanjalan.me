<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset addfieldpath="/administrator/components/com_bookpro/elements">	
	<fields>

		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
		
															
		<field
			id="title"
			name="title"
			type="text"
			required="true"
			label="COM_BOOKPRO_CGROUP_TITLE"
			description="COM_BOOKPRO_CGROUP_TITLE"
			class="inputbox"
			size="40"/>						
								
													
						
		<field
			id="discount"
			name="discount"
			type="text"
			required="false"
			label="COM_BOOKPRO_CGROUP_DISCOUNT"
			description="COM_BOOKPRO_CGROUP_DISCOUNT"
			class="inputbox"
			size="40"/>	
						
		
																
		<field
			id="state"
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
			
		</field>					
				
								
	</fields>	
</fieldset>		
</form>	