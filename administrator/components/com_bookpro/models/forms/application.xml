<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset id="basic" label="BASIC_CONFIG">
	    <field name="id" type="hidden" class="readonly" readonly="true" />
	    <field name="state" type="hidden" class="readonly" default="1" readonly="true" />
	    <field name="title" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_TITLE"
            description="COM_BOOKPRO_APP_TITLE" required="true" />
	    <field name="code" type="text" class="inputbox" readonly="readonly" size="40" label="COM_BOOKPRO_APP_CODE"
            description="COM_BOOKPRO_APP_CODE" required="true" />
	    <field name="desc" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_DESCRIPTION"
            description="COM_BOOKPRO_APP_DESCRIPTION"/>
	    <field name="views" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_VIEW"
            description="COM_BOOKPRO_APP_VIEW" />
	    <field name="service_fee" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_SERVICE_FEE"
            description="COM_BOOKPRO_APP_SERVICE_FEE" />
	    <field name="vat" type="text" class="inputbox" size="40" label="VAT"
            description="VAT" />
	    <field name="deposit" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_DEPOSITE_PERCENTAGE"
            description="COM_BOOKPRO_APP_DEPOSITE_PERCENTAGE" />	                
        <field name="success" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_SUCCESS_MESSAGE"
            description="COM_BOOKPRO_APP_SUCCESS_MESSAGE" />
        <field name="failed" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_FAILED_MESSAGE"
            description="COM_BOOKPRO_APP_FAILED_MESSAGE" />
	    
	</fieldset>
	<fieldset id="email" label="EMAIL_CONFIG">
	    <field name="email_send_from" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_EMAIL_SEND_FROM"
            description="COM_BOOKPRO_APP_EMAIL_SEND_FROM" />
	    <field name="email_send_from_name" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_EMAIL_SEND_FROM_NAME"
            description="COM_BOOKPRO_APP_EMAIL_SEND_FROM_NAME" />	
        <field name="email_customer_subject" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_EMAIL_CUSTOMER_SUBJECT"
            description="COM_BOOKPRO_APP_EMAIL_CUSTOMER_SUBJECT" />
        <field name="email_customer_body" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" 
			filter="JComponentHelper::filterText" label="COM_BOOKPRO_APP_BODY_EMAIL_CUSTOMER"
            description="COM_BOOKPRO_APP_BODY_EMAIL_CUSTOMER" />
        <field name="email_admin" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_EMAIL_ADMIN"
            description="COM_BOOKPRO_APP_EMAIL_ADMIN" />
        <field name="email_admin_subject" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_EMAIL_ADMIN_SUBJECT"
            description="COM_BOOKPRO_APP_EMAIL_ADMIN_SUBJECT" />
        <field name="email_admin_body" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" 
			filter="JComponentHelper::filterText" label="COM_BOOKPRO_APP_EMAIL_ADMIN_BODY"
            description="COM_BOOKPRO_APP_EMAIL_ADMIN_BODY" />
        <field name="email_supplier_subject" type="text" class="inputbox" size="40" label="COM_BOOKPRO_APP_EMAIL_SUPPLIER_SUBJECT"
            description="COM_BOOKPRO_APP_EMAIL_SUPPLIER_SUBJECT" />
        <field name="email_supplier_body" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" 
			filter="JComponentHelper::filterText" label="COM_BOOKPRO_APP_EMAIL_SUPPLIER_BODY"
            description="COM_BOOKPRO_APP_EMAIL_SUPPLIER_BODY" />
        
	    
	</fieldset>
</form>