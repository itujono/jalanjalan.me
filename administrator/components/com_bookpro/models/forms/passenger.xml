<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset addfieldpath="/administrator/components/com_bookpro/elements">	
		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>	
						
														
		<field
			id="firstname"
			name="firstname"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_FIRSTNAME"
			description="COM_BOOKPRO_PASSENGER_FIRSTNAME"
			class="inputbox"
			size="40"/>						
								
														
		<field
			id="lastname"
			name="lastname"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_LASTNAME"
			description="COM_BOOKPRO_PASSENGER_LASTNAME"
			class="inputbox"
			size="40"/>						
								
														
		<field
			id="gender"
			name="gender"
			type="radio"
			required="false"
			label="COM_BOOKPRO_PASSENGER_GENDER"
			description="COM_BOOKPRO_PASSENGER_GENDER" class="btn-group">
			<option value="M">COM_BOOKPRO_MALE</option>
			<option value="F">COM_BOOKPRO_FEMALE</option>
			
		</field>							
														
		<field
			id="passport"
			name="passport"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_PASSPORT"
			description="COM_BOOKPRO_PASSENGER_PASSPORT"
			class="inputbox"
			size="40"/>						
								
						
		<field
			id="ppvalid"
			name="ppvalid"
			type="calendar"
			required="false"
			label="COM_BOOKPRO_PASSENGER_PPVALID"
			description="COM_BOOKPRO_PASSENGER_PPVALID"
			class="inputbox"
			size="16"
			format="%Y-%m-%d"/>			
							
							
		<field
			id="birthday"
			name="birthday"
			type="calendar"
			required="false"
			label="COM_BOOKPRO_PASSENGER_BIRTHDAY"
			description="COM_BOOKPRO_PASSENGER_BIRTHDAY"
			class="inputbox"
			size="16"
			format="%Y-%m-%d"/>			
							
															
		<field
			id="email"
			name="email"
			type="email"
			required="false"
			label="COM_BOOKPRO_PASSENGER_EMAIL"
			description="COM_BOOKPRO_PASSENGER_EMAIL"
			class="inputbox"
			size="40"/>		
			
		<field
			id="phone"
			name="phone"
			type="tel"
			required="false"
			label="COM_BOOKPRO_PASSENGER_PHONE"
			class="inputbox"
			size="40"/>		
			
		<field
			id="flightno"
			name="flightno"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_FLIGHTNO"
			class="inputbox"
			size="40"/>						
								
		<field
			id="notes"
			name="notes"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_NOTES"
			class="inputbox"
			size="40"/>				
														
		<field
			id="country_id"
			name="country_id"
			type="country"
			required="false"
			label="COM_BOOKPRO_PASSENGER_COUNTRY"
			description="COM_BOOKPRO_PASSENGER_COUNTRY"
			class="inputbox"
			size="40"/>						
								
														
		<field
			id="group_id"
			name="group_id"
			type="cgroup"
			required="false"
			label="COM_BOOKPRO_PASSENGER_GROUP"
			description="COM_BOOKPRO_PASSENGER_GROUP"
			class="inputbox"
			size="40"/>						
								
														
		<field
			id="documenttype"
			name="documenttype"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_DOCUMENTTYPE"
			description="COM_BOOKPRO_PASSENGER_DOCUMENTTYPE"
			class="inputbox"
			size="40"/>						
								
														
		<field
			id="seat"
			name="seat"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_SEAT"
			class="inputbox"
			size="40"/>						
								
														
		<field
			id="return_seat"
			name="return_seat"
			type="text"
			required="false"
			label="COM_BOOKPRO_PASSENGER_RETURN_SEAT"
			class="inputbox"
			size="40"/>	
			
			
		<field
			id="start"
			name="start"
			type="calendar"
			required="false"
			label="COM_BOOKPRO_DEPART_DATE"
			class="inputbox input-small"
			size="10"
			format="%Y-%m-%d"/>	
			
		<field
			id="return_start"
			name="return_start"
			type="calendar"
			required="false"
			label="COM_BOOKPRO_PASSENGER_RETURN_START"
			description="COM_BOOKPRO_PASSENGER_RETURN_START"
			class="inputbox input-small"
			size="10"
			format="%Y-%m-%d"/>			
	
</fieldset>

    <fields name="params" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
		<fieldset name="jbasic" label="COM_BOOKPRO_FIELDSET_OPTIONS">
			
		</fieldset>
	</fields>
			
</form>	