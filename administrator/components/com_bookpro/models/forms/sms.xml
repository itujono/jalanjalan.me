<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset>	
	<fields>

		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
		
															
		<field
			id="title"
			name="title"
			type="text"
			required="true"
			label="JGLOBAL_TITLE"
			class="inputbox"
			size="40"/>						
								
		<field
			id="message"
			name="message"
			rows="10" cols="80"
			type="textarea"
			required="true"
			label="COM_BOOKPRO_SMS_CONTENT"
			class="inputbox"
			/>											
		
																
		<field
			id="state"
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
			
		</field>					
				
								
	</fields>	
</fieldset>		
</form>	