			<fieldset name="addon_params" label="T3_ADDON_LABEL" description="T3_ADDON_DESC">
				<field type="t3depend" function="@legend" label="T3_ADDON_ANIMATIONS"
							 description="T3_ADDON_ANIMATIONS_DESC"/>
	
