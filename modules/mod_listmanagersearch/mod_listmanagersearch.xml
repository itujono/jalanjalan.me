<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" method="upgrade">
  <name>ListManager Search Module</name>
  <creationDate>November 2017</creationDate>
  <author>Moonsoft</author>  
  <authorEmail>gestion@moonsoft.es</authorEmail>
  <authorUrl>www.moonsoft</authorUrl>
  <copyright>(C) 2017 Moonsoft</copyright>
  <license>GNU/GPL v3 http://www.gnu.org/licenses/gpl.html</license>      
  <version>2.5.5</version>  
  <description><![CDATA[LM_MODULE_DESC]]></description>
  <files>
    <filename module="mod_listmanagersearch">mod_listmanagersearch.php</filename>
    <filename module="mod_listmanagersearch">mod_listmanagersearch.xml</filename>
    <filename module="mod_listmanagersearch">index.html</filename>
    <folder>assets</folder>
    <folder>tmpl</folder>
    <folder>language</folder>
  </files>
   <languages>
      <!-- Any language files included with the module -->
      <language tag="en-GB">language/en-GB.mod_listmanagersearch.ini</language>      
  </languages>
  <config>
		<fields name="params">
			<fieldset name="params" label="Basic">		
			    <field name="moduleclass" type="text" default="" label="LM_MCS" description="LM_MCS_DESC"></field>
			    <field name="includebutton" type="radio" default="1" label="LMS_INCLUDEBUTTON" description="LMS_INCLUDEBUTTON_DESC">
					<option value="0">LM_NO</option>
					<option value="1">LM_YES</option>
				</field>
				<field name="includetext" type="radio" default="1" label="LMS_TEXT" description="LMS_TEXT_DESC">
					<option value="0">LM_NO</option>
					<option value="1">LM_YES</option>
				</field>
				<field name="hidesearchonlist" type="radio" default="1" label="LMS_HIDESEARCH" description="LMS_HIDESEARCH_DESC">
					<option value="0">LM_NO</option>
					<option value="1">LM_YES</option>
				</field>		        
		  	</fieldset>
		</fields>
	</config>	
</extension>
